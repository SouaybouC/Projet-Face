{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}{{produit.Name}}{% endblock %}

{% block body %}
<style xmlns="http://www.w3.org/1999/html">
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>{{ produit.Name }}</h1>
<p> {{ produit.description }}</p>

<h2> Commentaires </h2>


{% for comments in produit.CommentsRelation %}
<p> Titre : {{ comments.title }} </p>
<p> {{ comments.contains }} </p>
<a href="{{ path('comment_edit', {id : comments.id}) }}"> Modifier </a>
<a href="{{ path('delete',{id : comments.id}) }}">Supprimer<a>
        <br>
        <br>
        {% else %}
            <p>Aucun commentaire soyez le premier a en rédigez un</p>
        {% endfor %}


        <h2> Ajout d'un commentaire</h2>

        <p>Dites nous ce que vous avez pensé de ce produit</p>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Valider</button>
        {{ form_end(form)  }}
        {% endblock %}
