{% extends 'base.html.twig' %}
{% block title %}
Inscription !
{% endblock %}


{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}


<section class="body" xmlns="http://www.w3.org/1999/html">
    <div class="Inscription">

        <div class="Inscription-content">
            <h2> Inscription</h2>
            <div class="inscription-form">

                {{ form_start(form) }}

                <span class="id">
                    {{ form_row(form.email,{'label':'Adresse email','attr':{'placeholder':'pedro1234@projectface.com','class':'area'}}) }}
                    {{ form_row(form.username,{'label':'Nom d\'utilisateur ', 'attr':{'placeholder':'exemple: pedro1234','class':'area'}}) }}
                    {{ form_row(form.firstname, {'label':'Pr√©nom','attr':{'placeholder':'firstname','class':'area'}}) }}
                    {{ form_row(form.name, {'label':'Nom de famille ','attr':{'placeholder':'Lastname','class':'area'}}) }}
                    {{ form_row(form.sex, {'label':'Sexe','attr':{'placeholder':'Genre: M/F/N','class':'area'}}) }}
                    {{ form_row(form.password,{'attr':{'class':'area'}}) }}
                    {{ form_row(form.confirm_password,{'attr':{'class':'area'}}) }}
                </span>
                <button class="envoyerins" type="submit">Valider!</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</section>
{% endblock %}



