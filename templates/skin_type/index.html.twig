{% extends 'base.html.twig' %}

 {% block title %}SkinType index{% endblock %}

 {% block body %}
     <h1>SkinType index</h1>

     <table class="table">
         <thead>
         <tr>
             <th>Label</th>
             <th>Tone</th>
             <th>Description</th>
             {% if app.user %}
             <th>actions</th>
             {% endif %}
         </tr>
         </thead>
         <tbody>
         {% for skin_type in skin_types %}
             <tr>
                 <td>{{ skin_type.Label }}</td>
                 <td>{{ skin_type.Tone }}</td>
                 <td>{{ skin_type.Description }}</td>
                 <td>
                     {% if app.user %}
                     <a href="{{ path('skin_type_show', {'id': skin_type.id}) }}">show</a>
                     {% endif %}
                 </td>
             </tr>
         {% else %}
             <tr>
                 <td colspan="9">no records found</td>
             </tr>
         {% endfor %}
         </tbody>
     </table>

 {% endblock %}